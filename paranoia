public class AreEqualsTest {

    public static void main(String[] args) {
        testMinIguales();
        testMayIguales();
        testMinMayIguales();
        testMinMayNum();
        testMinDiferentes();
        testMayDiferentes();
        testCadenasVacias();
        testEspacio();
    }

    private static void testMinIguales() {
        System.out.println(areEquals("azul", "azul")); // Boolean: true
    }

    private static void testMayIguales() {
        System.out.println(areEquals("AZUL", "AZUL")); // Boolean: true
    }

    private static void testMinMayIguales() {
        System.out.println(areEquals("PrOgRaMaCiOn", "pRoGrAmAcIoN")); // Esperado: true
    }

    private static void testMinMayNum() {
        System.out.println(areEquals("123456AbC", "abc123456")); // Esperado: false
    }

    private static void testMinDiferentes() {
        System.out.println(areEquals("azul", "negro")); // Esperado: false
    }

    private static void testMayDiferentes() {
        System.out.println(areEquals("AZUL", "NEGRO")); // Esperado: false
    }

    private static void testCadenasVacias() {
        System.out.println(areEquals("", "")); // Esperado: false
    }

    private static void testEspacio() {
        System.out.println(areEquals("me llamo pepe", "mellamopepe")); // Esperado: false
    }

    
 
    private static boolean areEquals(String palabra1, String palabra2) {
        if (palabra1 == null && palabra2 == null) {
            return true;
        }

        if (palabra1 == null || palabra2 == null) {
            return false;
        }

        return palabra1.equalsIgnoreCase(palabra2);
    }
}
